{
  "manifest_version": 3,
  "name": "ISBN Extractor",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://www.books.com.tw/products/*", "https://www.kobo.com/*"],
      "js": [ "content_scripts/youtube-test.js", "content_scripts/content_scripts.js"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "options_page": "options/options.html",
  "permissions": [
    "storage"
  ]
}
